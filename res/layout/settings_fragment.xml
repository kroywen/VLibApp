<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	<LinearLayout
	    android:id="@+id/main_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="15dp"
	    android:orientation="vertical">
	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_marginBottom="10dp">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dp"
	            android:textColor="@android:color/white"
	            android:tag="@string/font_size" />
	        
	        <Spinner
	            android:id="@+id/fontSize"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:popupBackground="@color/app_main_color" />
	        
	    </LinearLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/list_selector" />
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_marginTop="10dp">
	        
	        <TextView 
	            android:textColor="@android:color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dp"
	            android:tag="@string/pre_due_days_notification" />
	        
	        <Spinner
	            android:id="@+id/preDueDaysNotification"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:popupBackground="@color/app_main_color" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_marginTop="10dp">
	        
	        <TextView 
	            android:textColor="@android:color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dp"
	            android:tag="@string/due_date_notification" />
	        
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
	        
	        <com.vtecsys.vlib.ui.view.MySwitch 
	            android:id="@+id/dueDateNotification"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_marginTop="10dp">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dp"
	            android:textColor="@android:color/white"
	            android:tag="@string/overdue_date_notification" />
	        
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
	        
	        <com.vtecsys.vlib.ui.view.MySwitch 
	            android:id="@+id/overdueDateNotification"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_marginTop="10dp">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dp"
	            android:textColor="@android:color/white"
	            android:tag="@string/collection_notification" />
	        
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
	        
	        <com.vtecsys.vlib.ui.view.MySwitch 
	            android:id="@+id/collectionNotification"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp">
	        
	        <TextView 
	            android:textColor="@android:color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dp"
	            android:tag="@string/check_alerts_interval" />
	        
	        <Spinner
	            android:id="@+id/checkAlertsInterval"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:popupBackground="@color/app_main_color" />
	        
	    </LinearLayout>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/list_selector" />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textColor="@android:color/white"
	        android:tag="@string/language" />
	    
	    <RadioGroup 
	        android:id="@+id/language"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginBottom="10dp">
	        
	        <RadioButton 
	            android:id="@+id/lang0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:tag="@string/lang0" />
	        
	        <RadioButton
	            android:id="@+id/lang1" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:tag="@string/lang1" />
	        
	        <RadioButton 
	            android:id="@+id/lang2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:tag="@string/lang2" />
	        
	    </RadioGroup>
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/list_selector" />
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_marginTop="10dp">
	        
	        <TextView 
	            android:textColor="@android:color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dp"
	            android:tag="@string/version" />
	        
	        <TextView 
	            android:textColor="@android:color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:text="V-App 1.0" />
	        
	    </LinearLayout>
	
	</LinearLayout>
	</ScrollView>
	
	<RelativeLayout 
	    android:id="@+id/progress"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/progress_view_background"
	    android:visibility="invisible">
	    
	    <ProgressBar 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        style="@android:style/Widget.ProgressBar" />
	    
	</RelativeLayout>
	
</FrameLayout>