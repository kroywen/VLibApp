<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:background="@color/list_header_background">
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/list_small_text_size"
        android:gravity="center"
        android:textColor="@color/app_main_color"
        android:textStyle="bold"
        android:tag="@string/call_no_issue_vol" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/list_small_text_size"
        android:gravity="center"
        android:textColor="@color/app_main_color"
        android:textStyle="bold"
        android:tag="@string/item_no" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/list_small_text_size"
        android:gravity="center"
        android:textColor="@color/app_main_color"
        android:textStyle="bold"
        android:tag="@string/status" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/list_small_text_size"
        android:gravity="center"
        android:textColor="@color/app_main_color"
        android:textStyle="bold"
        android:tag="@string/location" />
    
    <Button
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_btn_height"
        android:gravity="center"
        android:tag="@string/all"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/btn_orange"
        android:visibility="invisible" />

</LinearLayout>